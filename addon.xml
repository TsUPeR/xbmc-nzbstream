<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nzbstream"
       name="NzbStream"
       version="0.0.2"
       provider-name="Popeye">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="plugin.video.nzbs" version="0.0.14"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>NzbStream</summary>
    <description>Browse and stream from all newznab.com compatible sites</description>
    <disclaimer>Requires the NZBS add-on</disclaimer>
  </extension>
</addon>